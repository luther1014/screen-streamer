{
  "name": "screen-streamer",
  "version": "1.0.0",
  "description": "Electron app that streams desktop screen over HTTP as MJPEG",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.luther.screenstreamer",
    "productName": "ScreenStreamer",
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "icon.ico"
    }
  },
  "devDependencies": {
    "electron": "^34.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "express": "^4.21.0",
    "qrcode": "^1.5.4",
    "screenshot-desktop": "^1.14.0"
  }
}
